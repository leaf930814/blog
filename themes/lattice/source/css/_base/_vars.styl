// Colors
color-default = #333
color-accent = #1abc9c
color-grey = #999
color-grey-lite   = #eee
color-border = #ddd
color-link = #333
color-dark = #000
color-background = #eee
color-sidebar-text = #777
color-widget-background = color-border
color-widget-border = #ccc
color-footer-background = #262a30
color-mobile-nav-background = #191919
color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-google = #dd4b39
$color-theme = #6699ff
color-primary = $color-theme

bg-primary = $color-theme
bg-block = #f8f8f8
bg-table-th = #fbfbfb
bg-table-hd = #f1f1f1

// Fonts
$font-family-monospace = "Input Mono", "PT Mono", Consolas, Monaco, Menlo, monospace
font-family = "PingFang SC", "Lantinghei SC", "Microsoft Yahei", "Hiragino Sans GB", "Microsoft Sans Serif", "WenQuanYi Micro Hei", sans
font-family-title = "PingFang SC", Verdana, "Helvetica Neue", "Microsoft Yahei", "Hiragino Sans GB", "Microsoft Sans Serif", "WenQuanYi Micro Hei", sans-serif
font-sans = "Helvetica Neue", Helvetica, Arial, sans-serif
font-serif = Palatino, Optima, Georgia, serif
font-mono = $font-family-monospace
font-icon = FontAwesome
font-icon-path = "fonts/fontawesome-webfont"
font-icon-version = "4.0.3"
font-size = 1em
font-weight = 400
font-weight-title = 400
line-height = 1.8
line-height-title = 1.35


$fa-var-twitter = "\f099"
$fa-var-twitter-square =  "\f081"
$fa-var-rss =  "\f09e"
$fa-var-github =  "\f09b"
$fa-var-github-alt =  "\f113";

// Header
logo-size = 40px
subtitle-size = 16px
banner-height = 300px
banner-url = "images/banner.jpg"

sidebar = hexo-config("sidebar")

// Layout
block-margin = 50px
article-padding = 20px
mobile-nav-width = 280px
main-column = 9
sidebar-column = 3

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"

// header
$headerHeight = 60px