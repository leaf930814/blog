body
    display: flex
    flex-direction: column
    min-height: 100vh
.grid
    width: 1190px
    margin auto
    clearfix()
    +desktop-large() {
        width: 1490px
    }
    +desktop() {
        width: 990px
    }
    +mobile() {
        width: 100%
    }
    

.mod-container
    flex: 1
    padding-top: 20px
    +mobile() {
        // background: #eaeaea
        padding-top: 1px
    }
  
.mod-main
    float:left
    width: 930px
    margin-right: 20px
    +desktop-large() {
        width: 1230px
    }
    +desktop() {
        width: 730px
    }
    +mobile() {
        float: none
        margin-right: 0
        width: 100%
    }
    
.compat 
    .mod-hd,
    .post-comments 
        display: none
        
.nohd 
    .mod-hd
        display: none
.nostats {
    .post-stats {
        display: none;
    }
}
.nopager {
    .pagination-post {
        display: none;
    }
}
.nocm {
    .post-comments {
        display: none;
    }
}
