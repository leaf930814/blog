.mod-side
    background: #fff
    float: left
    width: 240px
    box-sizing: border-box
    padding: 20px 0 20px 15px
    &-sec
        margin-bottom: 30px
        &:last-child
            margin-bottom 0
        &-hd
          position: relative
          padding-left: 15px
          height: 20px
          line-height: @height
          &:before
            content: ' '
            position: absolute
            left: 0
            height: 100%
            width: 3px;
            background: $color-theme
          h2
            font-size: 16px
            font-weight: normal
        &-bd
          padding: 10px 15px
    +mobile() {
        float: none
        width: 100%
        margin-top: 20px
        border-top: 1px solid #ddd 
    }
          
    &-list
      overflow: hidden
      & li
        margin-bottom: 8px
        white-space: nowrap
        text-overflow: ellipsis
        overflow: hidden
        &:last-child
            margin-bottom: 0
        +mobile() {
           float: left
           width: 45%
           margin-right: 10%
           &:nth-child(2n) {
               margin-right: 0
           }
        }
        